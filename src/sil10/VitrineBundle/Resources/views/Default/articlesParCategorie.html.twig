<!DOCTYPE html>
<html>
    <head>
        <title>Librio</title>
    </head>
    <body>
        <a href="{{ path('_default') }}">Retour accueil</a> <a href="{{ path('_catalogue') }}">Retour catalogue</a>
        <table>
            <tr><td>Titre</td><td>Prix</td><td>Stock</td></tr>
            {% for article in articles %}
            <tr>
                <td>{{ article.libelle }}</td>
                <td>{{ article.prix }}</td>
                <td>{{ article.stock }}</td>
                <td><a href="{{ path('_ajouteArticle', {  'idArticle':article.id})}}">Ajouter au panier</a></td>
            </tr>
            {% endfor %}
        </table>
    </body>
</html>
